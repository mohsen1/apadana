{
  "name": "apadana",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "docker:base": "docker build -t base-image -f Dockerfile.base .",
    "docker:dev": "pnpm docker:base && docker-compose up --build --no-log-prefix",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v",
    "docker:db": "docker-compose exec db psql -U admin -d apadana",
    "docker:rebuild": "docker compose build --no-cache app && docker compose up --no-log-prefix",
    "docker:prune": "docker system prune -af --volumes",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build --no-log-prefix",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:prod:clean": "docker-compose -f docker-compose.prod.yml down -v",
    "predev": "pnpm prisma:generate && pnpm migrate:dev",
    "dev": "dotenv -e .env.local -- concurrently --prefix-colors \"blue.bold,magenta.bold,green.bold,yellow.bold,cyan.bold\" npm:dev:*",
    "dev:next": "next dev --turbo",
    "dev:prisma": "dotenv -e .env.local -- prisma generate --no-hints --watch",
    "dev:storybook": "storybook dev --quiet --port=6006 --no-open | grep -v -iE '^(info|warn)'",
    "dev:smee": "node src/scripts/smee-client.js",
    "dev:studio": "dotenv -e .env -- prisma studio --browser none",
    "migrate:dev": "dotenv -e .env.local -- prisma migrate dev --name $(date +'%Y%m%d_%H%M%S')",
    "migrate:prod": "dotenv -e .env -- prisma migrate deploy --no-hints",
    "prisma:generate": "dotenv -e .env.local -- prisma generate --no-hints",
    "prisma:watch": "dotenv -e .env.local -- prisma generate --no-hints --watch",
    "build": "dotenv -e .env prisma generate --no-hints && dotenv -e .env next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "lint:strict": "eslint --max-warnings=0 src",
    "typecheck": "pnpm prisma:generate && tsc --noEmit --incremental false",
    "test:watch": "jest --watch",
    "test": "jest",
    "pree2e": "pnpm docker:prod",
    "e2e": "PORT=3030 playwright test --project=chromium",
    "e2e:ci": "playwright test",
    "e2e:prod": "BASE_URL=https://apadana.app playwright test --project=chromium",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006 --quiet",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.9.0",
    "@internationalized/date": "^3.5.5",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@react-email/components": "^0.0.28",
    "@react-google-maps/api": "^2.19.3",
    "@storybook/addon-themes": "^8.2.9",
    "@types/lodash": "^4.17.7",
    "@uploadthing/react": "^7.0.3",
    "@vercel/analytics": "^1.4.1",
    "@vercel/postgres": "^0.10.0",
    "@vercel/speed-insights": "^1.0.12",
    "add": "^2.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dotenv-cli": "^7.4.2",
    "fetch-blob": "^4.0.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.439.0",
    "next": "15.0.3",
    "next-safe-action": "^7.9.2",
    "next-themes": "^0.3.0",
    "oslo": "^1.2.1",
    "prisma": "^5.22.0",
    "qs": "^6.13.0",
    "react": "19.0.0-rc-66855b96-20241106",
    "react-aria": "^3.34.3",
    "react-day-picker": "8.10.1",
    "react-dom": "19.0.0-rc-66855b96-20241106",
    "react-hook-form": "^7.53.0",
    "react-icons": "^5.3.0",
    "react-stately": "^3.32.2",
    "resend": "^4.0.1",
    "slugify": "^1.6.6",
    "smee-client": "^2.0.3",
    "svix": "^1.31.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
