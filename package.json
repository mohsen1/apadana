{
  "name": "make-your-own-listing-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env.local -- concurrently --prefix-colors \"blue.bold,magenta.bold\" npm:dev:*",
    "dev:next": "next dev",
    "dev:prisma": "prisma generate --watch",
    "migrate:dev": "dotenv -e .env.local prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:watch": "prisma generate --watch",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "lint:strict": "eslint --max-warnings=0 src",
    "typecheck": "pnpm prisma:generate && tsc --noEmit --incremental false",
    "test:watch": "jest --watch",
    "test": "jest",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.36.3",
    "@clerk/nextjs": "^5.3.7",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.9.0",
    "@internationalized/date": "^3.5.5",
    "@prisma/client": "^5.19.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@types/lodash": "^4.17.7",
    "@uploadthing/react": "^6.7.2",
    "@vercel/postgres": "^0.10.0",
    "add": "^2.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv-cli": "^7.4.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.439.0",
    "next": "^14.2.7",
    "next-safe-action": "^7.9.2",
    "next-themes": "^0.3.0",
    "prisma": "^5.19.0",
    "qs": "^6.13.0",
    "react": "^18.3.1",
    "react-day-picker": "8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-icons": "^4.12.0",
    "svix": "^1.31.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "uploadthing": "^6.13.2",
    "uvcanvas": "^0.2.1",
    "yet-another-react-lightbox": "^3.21.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.8",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/qs": "^6.9.15",
    "@types/react": "^18.3.5",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.7",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^12.5.0",
    "next-router-mock": "^0.9.13",
    "next-sitemap": "^2.5.28",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm prisma:generate",
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "**/*.{json,css,scss,md,webmanifest}": [
      "prettier -w"
    ]
  },
  "concurrently": {
    "names": {
      "next": "next",
      "prisma": "prisma"
    }
  }
}
