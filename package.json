{
  "name": "apadana",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "docker:dev": "pnpm run docker:down && concurrently \"pnpm run docker:dev:start\" \"pnpm run prisma:watch\" --kill-others --success=first --raw",
    "docker:dev:start": "DOCKER_BUILDKIT=1 COMPOSE_DOCKER_CLI_BUILD=1 docker compose -f src/docker/docker-compose.dev.yml up --build --no-log-prefix",
    "docker:down": "docker-compose -f src/docker/docker-compose.dev.yml down",
    "docker:clean": "docker-compose -f src/docker/docker-compose.dev.yml down -v && docker volume prune -f",
    "docker:db": "docker-compose -f src/docker/docker-compose.dev.yml exec db psql -U admin -d apadana",
    "docker:rebuild": "DOCKER_BUILDKIT=1 COMPOSE_DOCKER_CLI_BUILD=1 docker compose -f src/docker/docker-compose.dev.yml build --no-cache app && docker compose -f src/docker/docker-compose.dev.yml up --no-log-prefix",
    "docker:prune": "docker system prune -af --volumes",
    "docker:prod": "DOCKER_BUILDKIT=1 COMPOSE_DOCKER_CLI_BUILD=1 docker-compose -f src/docker/docker-compose.prod.yml up --build --no-log-prefix",
    "docker:prod:down": "docker-compose -f src/docker/docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f src/docker/docker-compose.prod.yml logs -f",
    "docker:prod:clean": "docker-compose -f src/docker/docker-compose.prod.yml down -v",
    "docker:prod:rebuild": "DOCKER_BUILDKIT=1 COMPOSE_DOCKER_CLI_BUILD=1 docker-compose -f src/docker/docker-compose.prod.yml build app_prod && docker-compose -f src/docker/docker-compose.prod.yml up -d app_prod",
    "predev": "pnpm prisma:generate && pnpm migrate:dev",
    "dev": "concurrently --color --prefix-colors \"blue.bold,magenta.bold,green.bold,yellow.bold,cyan.bold\" npm:dev:*",
    "dev:next": "next dev --turbo",
    "dev:prisma": "prisma generate --schema=src/prisma/schema.prisma --no-hints --watch",
    "dev:prisma:seed": "prisma db seed",
    "dev:storybook": "storybook dev --quiet --port=6006 --no-open | grep -v -iE 'info|warn' | grep -v '^$'",
    "dev:studio": "nodemon --watch prisma/schema.prisma --exec 'prisma studio --schema=src/prisma/schema.prisma --browser none'",
    "migrate:dev": "prisma migrate deploy --schema=src/prisma/schema.prisma",
    "migrate:prod": "prisma migrate deploy --schema=src/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=src/prisma/schema.prisma --no-hints",
    "prisma:watch": "pnpm prisma generate --schema=src/prisma/schema.prisma --watch",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=src/prisma/schema.prisma",
    "build": "prisma generate --schema=src/prisma/schema.prisma --no-hints && next build",
    "start": "next start",
    "fix": "pnpm lint:fix && pnpm format",
    "lint": "eslint --config=config/eslint.config.mjs",
    "lint:fix": "eslint --config=config/eslint.config.mjs --fix",
    "lint:strict": "eslint --max-warnings=0 --config=config/eslint.config.mjs",
    "typecheck": "pnpm prisma:generate && tsc --noEmit --incremental false",
    "test": "vitest run --config=config/vitest.config.ts",
    "test:watch": "vitest --config=config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config=config/vitest.config.ts",
    "test:ui": "vitest --ui --config=config/vitest.config.ts",
    "e2e": "PORT=3030 playwright test --project=chromium --config=src/e2e/playwright.config.ts",
    "e2e:dev": "PORT=3000 PLAYWRIGHT_IS_TESTING_DEV=true playwright test --project=chromium --config=src/e2e/playwright.config.ts",
    "e2e:ci": "playwright test --config=src/e2e/playwright.config.ts",
    "e2e:prod": "BASE_URL=https://apadana.app playwright test --project=chromium --config=src/e2e/playwright.config.ts",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "postbuild": "next-sitemap --config config/next-sitemap.config.js",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006 --quiet",
    "build-storybook": "storybook build",
    "test:cleanup": "docker-compose -f src/docker/docker-compose.test.yml down"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.705.0",
    "@aws-sdk/s3-request-presigner": "^3.705.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@faker-js/faker": "^9.3.0",
    "@hookform/resolvers": "^3.9.1",
    "@internationalized/date": "^3.6.0",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@react-email/components": "^0.0.28",
    "@react-email/tailwind": "^1.0.3",
    "@react-google-maps/api": "^2.20.3",
    "@storybook/addon-themes": "^8.4.7",
    "@types/lodash": "^4.17.13",
    "@vercel/analytics": "^1.4.1",
    "@vercel/postgres": "^0.10.0",
    "@vercel/speed-insights": "^1.1.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns-tz": "^3.2.0",
    "date-fns": "^3.6.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.439.0",
    "next-safe-action": "^7.9.9",
    "next-themes": "^0.3.0",
    "next": "15.0.3",
    "oslo": "^1.2.1",
    "prisma": "^5.22.0",
    "qs": "^6.13.1",
    "react-aria": "^3.36.0",
    "react-dom": "19.0.0-rc-66855b96-20241106",
    "react-hook-form": "^7.54.0",
    "react-icons": "^5.4.0",
    "react-stately": "^3.34.0",
    "react": "19.0.0-rc-66855b96-20241106",
    "resend": "^4.0.1",
    "slugify": "^1.6.6",
    "strip-ansi": "^7.1.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "uvcanvas": "^0.2.2",
    "yet-another-react-lightbox": "^3.21.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@chromatic-com/storybook": "^1.9.0",
    "@playwright/test": "^1.49.0",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-onboarding": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/nextjs": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@svgr/webpack": "^8.1.0",
    "@testcontainers/postgresql": "^10.16.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.1",
    "@types/qs": "^6.9.17",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.7",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint": "^9.17.0",
    "execa": "^9.5.2",
    "globals": "^15.13.0",
    "happy-dom": "^15.11.7",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "next-router-mock": "^0.9.13",
